<% provide(:page_title, 'Listing Videos') %>
  <div id="container">
    <div class="page-header">
      <h1>I GOT TALENT <small>Listing Videos</small></h1>
    </div>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Genre</th>
        <th>Url</th>
        <th>Duration in seconds</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @videos.each do |video| %>
        <tr>
          <td><%= video.title %></td>
          <td><%= video.type %></td>
          <td><%= video.genre %></td>
          <td><a href="<%= video.url %>" target="_blank"><%= video.url %></a></td>
          <td><%= video.duration_in_seconds %></td>
          <td><%= video.user.email %></td>
          <td><%= link_to 'Show', video, class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_video_path(video), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Video', new_video_path %>
</div>