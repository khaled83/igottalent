<% provide(:page_title, 'View Video') %>
  <div id="container">
    <div class="page-header">
      <h1>I GOT TALENT <small>Your Video</small></h1>
    </div>

  <p id="notice"><%= notice %></p>

  <% if @video.slot and @video.slot.start_time <= Time.now %>
    <span class="label label-success">Live</span>
    <br>
    <small> 125,000+ people viewed this!</small>
    <br>
  <% elsif @video.slot %>
    <span class="label label-primary">Queuing</span>
    <br>
    <small> Stay tuned, video will broadcast at <%= @video.slot.start_time %></small>
    <br>
  <% else %>
    <span class="label label-warning">Waiting</span>
    <br>
    <small> Your video is waiting for approval.</small>
    <br>
  <% end %>
  <br>

  <p>
    <strong>Title:</strong>
    <%= @video.title %>
  </p>

  <!-- <p>
    <strong>Type:</strong>
    <%= @video.type %>
  </p> -->

  <p>
    <strong>Genre:</strong>
    <%= @video.genre %>
  </p>

  <p>
    <strong>URL:</strong>
    <a href="<%= @video.url %>" target="_blank"><%= @video.url %></a>
  </p>

    <!--<p>
    <strong>Duration in seconds:</strong>
    <%= @video.duration_in_seconds %>
  </p>

   <p>
    <strong>User:</strong>
    <%= @video.user %>
  </p> -->

  <% if @video.user == current_user or (@video.slot and @video.slot.start_time <= Time.now)  %>
    <iframe width="560" height="315" src="<%= "https://www.youtube.com/embed/#{youtube_video_id}" %>" frameborder="0" allowfullscreen></iframe>
  <% end %>

  <br/>

  <%= link_to 'Edit', edit_video_path(@video) %> |
  <%= link_to 'Back', videos_path %> |
  <%= link_to 'Slots', slots_path %>

    <br><br>
    <!-- Like/Dislike -->
    <div style="float: left; width: 560px; clear: both;">
      <!-- Current user didn't like this video before? -->
      <% unless Like.liked?( @video.id, current_user.id ) %>
          <i class="fa fa-thumbs-o-up" style="font-size: 18px;" aria-hidden="true"></i>
          <%= link_to 'Like', "/videos/#{@video.id}/like", method: :post, class: 'btn btn-success btn-xs' %>
      <% else %>
          <i class="fa fa-thumbs-up" style="font-size: 18px;" aria-hidden="true"></i>
      <% end %>
      <!-- How many people liked this video? -->
      <small style="color: green;"><%= Like.like_count( @video.id ) %> liked this video <%= ' including you' if Like.liked?( @video.id, current_user.id ) %></small>

      <div style="float: right;">
        <!-- Current user didn't dislike this video before? -->
        <small style="color: red;"><%= Like.dislike_count( @video.id ) %> people disliked this video</small>
        <%= ' including you' if Like.disliked?( @video.id, current_user.id ) %>
        <% unless Like.disliked?( @video.id, current_user.id ) %>
            <%= link_to 'Dislike', "/videos/#{@video.id}/dislike", method: :post, class: 'btn btn-danger btn-xs' %>
            <i class="fa fa-thumbs-o-down" style="font-size: 18px;" aria-hidden="true"></i>
        <% else %>
            <i class="fa fa-thumbs-down" style="font-size: 18px;" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>

  <br><br>
  <% if @video.slot %>
    <%= link_to 'Disapprove', "/videos/#{@video.id}/disapprove", method: :post, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Approve', "/videos/#{@video.id}/approve", method: :post, class: 'btn btn-success' %>
  <% end %>
</div>