<% provide(:page_title, 'Listing Users') %>
<div id="container">
  <div class="page-header">
    <h1>I GOT TALENT <small>Listing Users</small></h1>
  </div>

  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>

</div>
